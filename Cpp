#include <iostream> 
#include <string>
 using namespace std;
struct Data
{ string city = "No "; 
string street = "No "; 
int houseNumber =-1;
int cartherasNumber =-1; 
int postalCode =-1;
};
void print(const Data& p)
{
cout<<"city: "<<p.city <<endl;
cout<<"street: " <<p.street <<endl; 
cout<<"houseNumber: " << p.houseNumber <<endl; 
cout<<"carthera'sNumber: " << p.cartherasNumber <<endl;
cout<<"postalCode: " << p.postalCode <<endl;
}
int main()
{
string city;
string street;
int cartherasNumber;
int houseNumber;
int postalCode; 
cout<<"Enter city"<<endl;
cin>>city;
cout<<"Enter street"<<endl;
cin>>street;
cout<<"Enter houseNumber"<<endl;
cin>> houseNumber;
cout<<"Enter cartherasNumber"<<endl;
cin>>cartherasNumber; 
cout<<"Enter postalCode"<<endl;
cin>>postalCode; 
Data My_self={.city=city,.street=street,.houseNumber=houseNumber,.cartherasNumber=cartherasNumber,.postalCode=postalCode };
Data Other_data;
print(My_self);
return 0;
}
