#include <iostream> 
#include <string>
using namespace std;
struct Person
{
 int accoutNumber =-1;
 string f_name = "No ";
 double balance = -1;
};
int main()
{
int accoutNumber;
string name;
double balance;
double newbalance;
cout<<"Enter accoutNumber"<<endl;
cin>>accoutNumber;
cout<<"Enter name"<<endl;
cin>>name;
cout<<"Enter balance"<<endl;
cin>>balance;
cout<<"Enter new balance"<<endl;
cin>>newbalance;
Person My_self={.accoutNumber=accoutNumber,.f_name=name,.balance=balance};
 Person Other_person;
 My_self.balance = newbalance;
cout<<"Your accout: "<<My_self.accoutNumber <<", " <<My_self.f_name <<", " << My_self.balance <<endl; 
 return 0;
}
